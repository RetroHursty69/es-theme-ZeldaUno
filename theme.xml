<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>-0.315 0.01</pos>
        <size>1 0.98</size>
        <logoScale>1.05</logoScale>
        <logoSize>0.33 0.33</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
		<logoAlignment>center</logoAlignment> 
         <zIndex>50</zIndex>			
      </carousel>

      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/main.png</path>
         <zIndex>2</zIndex>          
      </image>  
                 
      <text name="systemInfo">     
         <pos>0.345 0.842</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/TechnoRaceItalic-eZRWe.otf</fontPath>
	     <fontSize>0.036</fontSize>
         <zIndex>7</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/TechnoRaceItalic-eZRWe.otf</fontPath>
         <fontSize>0.04</fontSize>     
         <pos>0.15 1.939</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video, basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/TechnoRaceItalic-eZRWe.otf</fontPath>
