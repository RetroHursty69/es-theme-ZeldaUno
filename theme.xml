         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view> 
    
   
<!--
System Gamelist
--> 

   <view name="detailed,video">
      <textlist name="gamelist">
         <zIndex>43</zIndex>	      
	     <selectorColor>F3E804</selectorColor>
	     <selectorImagePath>./_inc/images/icon.png</selectorImagePath>
	     <selectedColor>F3E804</selectedColor>
	     <selectorHeight>.05</selectorHeight>        
         <pos>0.03 0.275</pos>
         <size>0.36 0.68</size> 
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/TechnoRaceItalic-eZRWe.otf</fontPath>
         <fontSize>0.031</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
	     <horizontalMargin>0.021</horizontalMargin>   
      </textlist>
   </view> 
 
   <view name="basic">
      <textlist name="gamelist">
         <zIndex>43</zIndex>	      
	     <selectorColor>F3E804</selectorColor>
	     <selectorImagePath>./_inc/images/icon.png</selectorImagePath>
	     <selectedColor>F3E804</selectedColor>
	     <selectorHeight>.05</selectorHeight>      
         <pos>0.42 0.07</pos>
         <size>0.54 0.85</size>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/TechnoRaceItalic-eZRWe.otf</fontPath>
         <fontSize>0.031</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>left</alignment>
	     <horizontalMargin>0.03</horizontalMargin>         
      </textlist>
   </view> 
 
  
<!--
